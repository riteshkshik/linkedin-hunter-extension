{
  "manifest_version": 3,
  "name": "LinkedIn Profile Hunter",
  "version": "1.0",
  "description": "Fetch LinkedIn profile details using Hunter.io",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.hunter.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Profile Hunter"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"]
    }
  ]
}